generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserState {
  id               String   @id @default(uuid())
  clientId         String   @unique
  completedIds     String[] @default([])
  prefs            Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  name             String?
  email            String?  @unique
  passwordHash     String?
  sessionTokenHash String?  @unique
  latestSchedule   Json?
}

model Course {
  id          String   @id @default(uuid())
  subject     String
  code        String
  title       String
  credits     Int
  description String
  prereqs     String[]
}
