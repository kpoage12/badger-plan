generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserState {
  id               String   @id @default(uuid())
  clientId         String   @unique
  name             String?
  email            String?  @unique
  passwordHash     String?
  sessionTokenHash String?  @unique
  completedIds     String[] @default([])
  prefs            Json
  latestSchedule   Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Course {
  id           String   @id @default(uuid())
  subject      String
  code         String
  title        String  
  credits      Int
  description  String
  prereqs      String[]
}
